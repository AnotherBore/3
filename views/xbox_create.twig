{% extends "__layout.twig" %}

{% block content %}
    <h1>Добавление приставки Xbox</h1>
    <hr>

		{% if message %}
    <div class="alert alert-info">
        {{ message }}
        <a href="/xboxes/{{id}}">открыть</a>
    </div>
    {% endif %}

    <form enctype="multipart/form-data" method="POST" class="row g-3">
        <div class="col-3">
            <label class="form-label">Название</label>
            <input type="text" class="form-control" name="title">
        </div>
				<div class="col-3">
            <label class="form-label">Цена ₽</label>
            <input type="text" class="form-control" name="price_ru">
        </div>
				<div class="col-3">
            <label class="form-label">Цена $</label>
            <input type="text" class="form-control" name="price_us">
        </div>
        <div class="col-3">
            <label class="form-label">Тип</label>
            <select class="form-control" name="type">
            {% for type in types %}
                <option value={{type.id}}>{{type.title}}</option>
            {% endfor %}
            </select>
        </div>
		<div class="col-12">
            <label for="formFile" class="form-label">Картинка</label>
            <input class="form-control" type="file" id="image" name="image">
        </div>
        <div class="col-12">
            <textarea name="description" placeholder="Описание..." class="form-control" rows="5"></textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>

{% endblock %}